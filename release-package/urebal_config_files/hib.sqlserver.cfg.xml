<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

    
    
	     <!-- Please change only local copy, No need to commit on server -->  
	    
		<!-- Database connection settings -->
		<property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="connection.url">jdbc:sqlserver://192.168.0.98;databaseName=rb_dev;</property>
		<property name="connection.username">rbuserdev</property>
		<property name="connection.password">rbuserdev</property>
		
		<!--<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">300</property>
		<property name="hibernate.c3p0.max_statements">50</property>
		<property name="hibernate.c3p0.idle_test_period">3000</property>
 		-->
		<!-- SQL dialect -->
		
		<!-- <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property> -->
<!-- 		<property name="hibernate.connection.datasource">java:comp/env/jdbc/rulebase</property> -->
        <!-- <property name="hibernate.current_session_context_class">thread</property> -->        
		<property name="dialect">org.hibernate.dialect.SQLServer2008Dialect</property>
		

		<!-- JDBC connection pool (use the built-in) -->
		<!-- <property name="connection.pool_size">1</property> -->
		<property name="hibernate.jdbc.batch_size">30</property>
		 


		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">false</property>
		<property name="hibernate.connection.autocommit">false</property> 

	</session-factory>
</hibernate-configuration>